int toDec(int inp, int base){
    int tmp,tmp2;
    tmp2 = inp;  
    int sum = 0;
    while(tmp2 != 0){
        tmp = tmp2%base;
        sum = sum + (tmp*pow(2, i));
        tmp2 = tmp2/10;
    }
    return sum;
}


